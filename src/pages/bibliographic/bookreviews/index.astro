---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { magazineData } from '../../../scripts/lib.ts'
import sqlite3 from 'sqlite3';

type reviewType = {
    id: number;
    title: string;
}

function getReview(db: sqlite3.Database) {
    return new Promise<reviewType[]>((ok, ng) => {
        db.all<reviewType>("SELECT id, title FROM series WHERE bookReviewTarget = 1 ORDER BY id", [], (err, rows) => {
            if (err) {
                ng(err);
            } else {
                ok(rows);
            }
        });
    });
}

const dbPath = import.meta.env.BIBLIODB_PATH;
const db = new sqlite3.Database(dbPath);
const reviews = await getReview(db);


---
<BaseLayout pageTitle="趣味の雑誌の書評欄で紹介された本のリスト">
    <h2>趣味の雑誌の書評欄で紹介された本のリスト</h2>
    <div class="magazine-list">
        <table>
            <tbody>
                {
                    reviews.map((review) => (
                        <tr>
                            <td>{review.title}：</td>
                            <td><a href={`/bibliographic/bookreviews/${review.id}/2025`}>2025年</a></td>
                            <td><a href={`/bibliographic/bookreviews/${review.id}/2026`}>2026年</a></td>
                        </tr>
                    ))  
                }    
            </tbody>
        </table>
    </div>
</BaseLayout>

<style>
    h2 {
        text-align: center;
    }
    .magazine-list {
        text-align: center;
        table {
            width: auto;
            margin-left: auto;
            margin-right: auto;
            font-size: 1em;
        }
        table > tbody > tr:nth-child(even) {
            background-color: unset;
        }
        table > tbody > tr > td {
            padding: 0.5em;
        }
        table > tbody > tr > td:first-child {
            text-align: left;
        }
    }
</style>