---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NavigationBar from '../components/NavigationBar.astro';
import '../styles/global.css';
const { pageTitle, title, description, style } = Astro.props;

---
<html lang="ja">
  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {style ? <link rel="stylesheet" href={`/styles/${style}`} /> : null}
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="twitter:card" content="summary">
    <meta property="og:title" content={title} />
    <meta property="og:type" content="artcle" />
    <meta property="og:url" content={"https://ofellabuta.com" + Astro.url.pathname}>
    <meta property="og:image" content="https://ofellabuta.com/ofellabuta.png" />
    <meta property="og:site_name" content="ofellabuta" />
    <meta property="og:description" content={description} />
    <title>ofellabuta - {pageTitle}</title>
  </head>
  <body>
    <Header />
    <NavigationBar />
    <slot />
    <Footer />
  </body>
</html>
